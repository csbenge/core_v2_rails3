
<h3><%= image_tag( "servers.png", :border => 0, :valign => "middle" ) %> <%= t('.engines') %> <%= link_to image_tag('tooltip12x12.png', :border => 0, :align => "top"), nil, title: t('.engines_tooltip'), rel: 'popover' %></h3>


<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="container center alert alert-error"  style="width:500px">
    <p id="alert"><%= flash[:alert] %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <tr style="background-color: #44721e">
    <th style="background-color: #91b96f"><%= sortable t('.engine_name') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.engine_desc') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.engine_type') %></th></th>
    <th style="background-color: #91b96f"><%= sortable t('.engine_host') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.engine_threads') %></th>

    <th style="text-align: center; background-color: #91b96f" colspan=3><%= t('.actions') %></th>
  </tr>

<% @engines.each do |engine| %>
  <tr>
    <td><%= engine.eng_name %></td>
    <td><%= engine.eng_description %></td>
    <td><%= engine.eng_type %></td>
    <td><%= engine.eng_host %></td>
    <td><%= engine.eng_threads %></td>

    <td style="text-align: center;width:30px"><%= link_to t('.show'), engine %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.edit'), edit_engine_path(engine) %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.destroy'), engine, confirm: t('.confirm'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to t('.new_engine'), new_engine_path , :class => "btn btn-primary btn-mini" %>

