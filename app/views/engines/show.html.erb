
<h2><%= t('.engine_details') %></h2><br>

<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
<tr>
  <td align="right" style="width:200px"><b><%= t('.engine_name') %></b></td>
  <td><%= @engine.eng_name %></td>
</tr>
<tr>
  <td align="right" style="width:200px"><b><%= t('.engine_desc') %></b></td>
  <td><%= @engine.eng_description %></td>
</tr>
<tr>
  <td align="right" style="width:200px"><b><%= t('.engine_type') %></b></td>
  <td><%= @engine.eng_type %></td>
</tr>
<tr>
  <td align="right" style="width:200px"><b><%= t('.engine_host') %></b></td>
  <td><%= @engine.eng_host %></td>
</tr>
<tr>
  <td align="right" style="width:200px"><b><%= t('.engine_threads') %></b></td>
  <td><%= @engine.eng_threads %></td>
</tr>
</table>

<%= link_to t('.edit_engine'), edit_engine_path(@engine), :class=>'btn btn-primary btn-mini' %>

<br>
<%= link_to t('.back'), engines_path %>


